// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  HOST
}

enum PropStatus {
  DRAFT
  ACTIVE
  INACTIVE
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}



model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String?   
  name      String?
  dob       DateTime?
  phone     String?
  role      Role      @default(USER)
  createdAt DateTime  @default(now())

  kycStatus KycStatus @default(PENDING)
  kycType   String?
  kycFrontUrl String?
  kycBackUrl  String?

  // üîê add these for OTP
  otp String? // store last OTP (dev/MVP)
  // otpExpires DateTime?   // optional: add expiry window

  // relations
  properties Property[] @relation("HostProperties")
  bookings   Booking[]  @relation("GuestBookings")
  reviews    Review[]   @relation("GuestReviews")
  favorites  Favorite[]

  notifications Notification[]
}

model Property {
  id           String     @id @default(cuid())
  title        String
  description  String?
  city         String
  address      String?
  lat          Float
  lng          Float
  status       PropStatus @default(DRAFT)
  createdAt    DateTime   @default(now())
  nightlyPrice Int

  // relations
  host     User      @relation("HostProperties", fields: [hostId], references: [id], onDelete: Cascade)
  hostId   String
  bookings Booking[]

  reviews            Review[]            @relation("PropertyReviews") // üëà back-ref for Review.property
  availabilityBlocks AvailabilityBlock[]

  // Denormalized rating summary
  avgRating    Float @default(0)
  reviewsCount Int   @default(0)

  favorites      Favorite[]
  favoritesCount Int        @default(0)

  @@index([city])
  @@index([lat, lng])
  @@index([status])
}

model Favorite {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId]) // one fave per user+property
  @@index([userId])
  @@index([propertyId])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  reply     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  booking   Booking @relation("BookingReview", fields: [bookingId], references: [id], onDelete: Cascade)
  bookingId String  @unique // one review per booking

  property   Property @relation("PropertyReviews", fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String

  guest   User   @relation("GuestReviews", fields: [guestId], references: [id], onDelete: Cascade)
  guestId String

  @@index([propertyId])
  @@index([guestId])
}

model Booking {
  id        String        @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())

  feesJson    Json?
  totalAmount Int?

  // relations
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String
  guest      User     @relation("GuestBookings", fields: [guestId], references: [id], onDelete: Cascade)
  guestId    String

  review Review? @relation("BookingReview") // üëà back-ref for Review.booking (one review per booking)

  amount        Int?
  currency      String?
  paymentRef    String? @unique
  paymentStatus String?

  payments Payment[]

  @@index([propertyId])
  @@index([guestId])
  @@index([status])
}

model Payment {
  id        String  @id @default(cuid())
  booking   Booking @relation(fields: [bookingId], references: [id])
  bookingId String

  reference String   @unique
  amount    Int
  currency  String
  status    String // e.g. "SUCCESS" | "FAILED"
  raw       Json?
  createdAt DateTime @default(now())
}

model AvailabilityBlock {
  id         String   @id @default(cuid())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String
  startDate  DateTime
  endDate    DateTime
  note       String?
  createdAt  DateTime @default(now())

  @@index([propertyId, startDate, endDate])
}



enum NotificationType {
  BOOKING_STATUS    // approved/rejected/cancelled
  REVIEW_REPLY      // host replied to guest review
  KYC_UPDATE        // admin verified/rejected KYC
}


model Notification {
  id        String            @id @default(cuid())
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  type      NotificationType
  title     String
  body      String?
  data      Json?
  readAt    DateTime?
  createdAt DateTime          @default(now())

  @@index([userId, createdAt])
  @@index([userId, readAt])
}