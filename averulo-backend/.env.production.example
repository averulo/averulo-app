NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=postgresql://user:password@host:5432/averulo

# JWT
JWT_SECRET=your_secure_jwt_secret

# Paystack
PAYSTACK_SECRET_KEY=pk_test_your_paystack_secret_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_here

# Email (SMTP)
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
EMAIL_FROM="Averulo <no-reply@averulo.app>"

# Allowed CORS origins
CORS_ORIGIN=https://averulo.app,https://staging.averulo.app

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Optional
APP_VERSION=1.0.0