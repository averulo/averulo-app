{
  "info": {
    "_postman_id": "b2a9f3a8-5b4a-4b77-9c4a-averulo-collection",
    "name": "Averulo Backend API Tests",
    "description": "Numbered flow: 1-Auth → 2-Properties → 3-Bookings → 4-Host → 5-Payments → 6-Availability → 7-Favorites → 8-Reviews (plus Dev helpers)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1-Auth",
      "item": [
        {
          "name": "Send OTP (USER)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/api/send-otp",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{user_email}}\"\n}" }
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "let j={};try{j=pm.response.json()}catch(e){}",
              "if(j.devOtp){ pm.environment.set('user_dev_otp', j.devOtp); }",
              "pm.test('OTP request ok', ()=> pm.expect([200]).to.include(pm.response.code));"
            ]}
          }]
        },
        {
          "name": "Verify OTP (USER → user_token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/api/verify-otp",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"otp\": \"{{user_otp_or_dev}}\"\n}" },
            "description": "Use {{user_dev_otp}} in dev"
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "const j=pm.response.json();",
              "pm.environment.set('user_token', j.token||'');",
              "pm.environment.set('user_id', (j.user&&j.user.id)||'');",
              "pm.test('Got user token', ()=> pm.expect(j.token).to.be.a('string'));"
            ]}
          }]
        },
        {
          "name": "Send OTP (HOST)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/api/send-otp",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{host_email}}\"\n}" }
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "let j={};try{j=pm.response.json()}catch(e){}",
              "if(j.devOtp){ pm.environment.set('host_dev_otp', j.devOtp); }",
              "pm.test('OTP request ok', ()=> pm.expect([200]).to.include(pm.response.code));"
            ]}
          }]
        },
        {
          "name": "Verify OTP (HOST → host_token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/api/verify-otp",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{host_email}}\",\n  \"otp\": \"{{host_otp_or_dev}}\"\n}" }
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "const j=pm.response.json();",
              "pm.environment.set('host_token', j.token||'');",
              "pm.environment.set('host_id', (j.user&&j.user.id)||'');",
              "pm.test('Got host token', ()=> pm.expect(j.token).to.be.a('string'));"
            ]}
          }]
        }
      ]
    },
    {
      "name": "2-Properties",
      "item": [
        {
          "name": "GET /api/properties (list)",
          "request": { "method": "GET", "url": "{{base_url}}/api/properties" },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "const j=pm.response.json();",
              "if(j.items&&j.items.length){ pm.environment.set('property_id', j.items[0].id); }",
              "pm.test('List ok', ()=> pm.expect(pm.response.code).to.equal(200));"
            ]}
          }]
        },
        {
          "name": "GET /api/properties/:id",
          "request": { "method": "GET", "url": "{{base_url}}/api/properties/{{property_id}}" }
        }
      ]
    },
    {
      "name": "3-Bookings",
      "item": [
        {
          "name": "POST /api/bookings (USER creates)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/bookings",
            "header": [
              { "key": "Authorization", "value": "Bearer {{user_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"propertyId\": \"{{property_id}}\",\n  \"checkIn\": \"{{check_in}}\",\n  \"checkOut\": \"{{check_out}}\"\n}" }
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "const j=pm.response.json();",
              "if(j.id) pm.environment.set('booking_id', j.id);",
              "pm.test('Booking created', ()=> pm.expect([200,201]).to.include(pm.response.code));"
            ]}
          }]
        },
        {
          "name": "GET /api/bookings/me (USER)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/bookings/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        },
        {
          "name": "PATCH /api/bookings/:id/cancel (USER)",
          "request": {
            "method": "PATCH",
            "url": "{{base_url}}/api/bookings/{{booking_id}}/cancel",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        }
      ]
    },
    {
      "name": "4-Host",
      "item": [
        {
          "name": "GET /api/bookings/host",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/bookings/host",
            "header": [{ "key": "Authorization", "value": "Bearer {{host_token}}" }]
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "const j=pm.response.json();",
              "if(Array.isArray(j)&&j.length){ pm.environment.set('booking_id', j[0].id); }"
            ]}
          }]
        },
        {
          "name": "PATCH /api/bookings/:id/approve",
          "request": {
            "method": "PATCH",
            "url": "{{base_url}}/api/bookings/{{booking_id}}/approve",
            "header": [{ "key": "Authorization", "value": "Bearer {{host_token}}" }]
          }
        },
        {
          "name": "PATCH /api/bookings/:id/reject",
          "request": {
            "method": "PATCH",
            "url": "{{base_url}}/api/bookings/{{booking_id}}/reject",
            "header": [{ "key": "Authorization", "value": "Bearer {{host_token}}" }]
          }
        }
      ]
    },
    {
      "name": "5-Payments",
      "item": [
        {
          "name": "POST /api/payments/init",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/payments/init",
            "header": [
              { "key": "Authorization", "value": "Bearer {{user_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"bookingId\": \"{{booking_id}}\"\n}" }
          },
          "event": [{
            "listen": "test",
            "script": { "type": "text/javascript", "exec": [
              "const j=pm.response.json();",
              "if(j.reference) pm.environment.set('payment_reference', j.reference);",
              "if(j.authorization_url) pm.environment.set('pay_authorization_url', j.authorization_url);",
              "pm.test('Init ok', ()=> pm.expect(pm.response.code).to.equal(200));"
            ]}
          }]
        },
        {
          "name": "(Dev) POST /__dev/hmac (compute signature for webhook body)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/__dev/hmac",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"status\": \"success\",\n    \"amount\": 5000000,\n    \"currency\": \"NGN\",\n    \"reference\": \"{{payment_reference}}\"\n  }\n}" }
          }
        },
        {
          "name": "POST /api/payments/webhook/paystack (dev sim)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/payments/webhook/paystack",
            "header": [
              { "key": "x-paystack-signature", "value": "<paste value from /__dev/hmac.computed>" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"status\": \"success\",\n    \"amount\": 5000000,\n    \"currency\": \"NGN\",\n    \"reference\": \"{{payment_reference}}\"\n  }\n}" }
          }
        },
        {
          "name": "GET /api/payments/verify/:reference",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/payments/verify/{{payment_reference}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        },
        {
          "name": "GET /api/payments/me",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/payments/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        }
      ]
    },
    {
      "name": "6-Availability",
      "item": [
        {
          "name": "POST /api/availability (HOST add block)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/availability",
            "header": [
              { "key": "Authorization", "value": "Bearer {{host_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"propertyId\": \"{{property_id}}\",\n  \"startDate\": \"{{check_in}}\",\n  \"endDate\": \"{{check_out}}\",\n  \"note\": \"maintenance\"\n}" }
          }
        },
        {
          "name": "GET /api/availability?propertyId=..",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/availability?propertyId={{property_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{host_token}}" }]
          }
        }
      ]
    },
    {
      "name": "7-Favorites",
      "item": [
        {
          "name": "POST /api/favorites/:propertyId",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/favorites/{{property_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        },
        {
          "name": "GET /api/favorites/me",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/favorites/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        },
        {
          "name": "GET /api/favorites/ids",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/favorites/ids",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        },
        {
          "name": "DELETE /api/favorites/:propertyId",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/api/favorites/{{property_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        }
      ]
    },
    {
      "name": "8-Reviews",
      "item": [
        {
          "name": "POST /api/reviews",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/reviews",
            "header": [
              { "key": "Authorization", "value": "Bearer {{user_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"bookingId\": \"{{booking_id}}\",\n  \"rating\": 5,\n  \"comment\": \"Great stay!\"\n}" }
          }
        },
        {
          "name": "GET /api/reviews/me",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/reviews/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{user_token}}" }]
          }
        },
        {
          "name": "GET /api/reviews/property/:id",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/reviews/property/{{property_id}}"
          }
        }
      ]
    },
    {
      "name": "Dev-Helpers",
      "item": [
        { "name": "GET /api/test", "request": { "method": "GET", "url": "{{base_url}}/api/test" } },
        { "name": "GET /__dev/secret-meta", "request": { "method": "GET", "url": "{{base_url}}/__dev/secret-meta" } }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": { "type": "text/javascript", "exec": [
        "// auto-pick dates if not set",
        "function iso(d){return d.toISOString().slice(0,10)}",
        "const now=new Date();",
        "const d1=new Date(now); d1.setDate(now.getDate()+14);",
        "const d2=new Date(now); d2.setDate(now.getDate()+16);",
        "if(!pm.environment.get('check_in')) pm.environment.set('check_in', iso(d1));",
        "if(!pm.environment.get('check_out')) pm.environment.set('check_out', iso(d2));",
        "// prefer dev otps when present",
        "if(pm.environment.get('user_dev_otp')) pm.environment.set('user_otp_or_dev', pm.environment.get('user_dev_otp'));",
        "if(pm.environment.get('host_dev_otp')) pm.environment.set('host_otp_or_dev', pm.environment.get('host_dev_otp'));"
      ]}
    }
  ]
}